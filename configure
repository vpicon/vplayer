#!/usr/bin/bash


## Create Building Directory Tree

function trymkdir { # Create dir iff it does not exist
    if [ ! -d $1 ]; then
        mkdir $1;
    fi
}

build_dirs=(bin               \
            bin/player        \
            bin/database      \
            bin/ui            \
            bin/test          \
            bin/test/player   \
            bin/test/database \
            bin/test/ui)

for dir in ${build_dirs[@]}; do
    trymkdir $dir;
done

